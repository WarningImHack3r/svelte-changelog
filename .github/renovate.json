{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", ":disableDependencyDashboard"],
	"labels": ["dependencies"],
	"rangeStrategy": "bump",
	"postUpdateOptions": ["pnpmDedupe"],
	"packageRules": [
		{
			"matchManagers": ["github-actions", "npm"],
			"groupName": "{{manager}}",
			"addLabels": ["{{manager}}"]
		}
	]
}
